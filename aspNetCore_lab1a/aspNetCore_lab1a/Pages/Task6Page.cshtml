@page
@model Task6Model

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Task 6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-page="/Index">ISP-Lab-1</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/task1">Task 1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/task5">Task 5</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-page="/task6">Task 6</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-sm-2" type="search" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-5" style="width:25%">
        <form method="post" asp-page-handler="MultiplyNumbers">
            <h5>Введите два числа:</h5>
            <input class="form-control" asp-for="X" type="number" required /><br />
            <input class="form-control" asp-for="Y" type="number" required /><br />
            <button class="btn btn-outline-secondary fs-5 mb-5" type="submit">Умножить</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="mt-3">
                <h5>Результат:</h5>
                <p>@Model.Result</p>
                <a class="btn btn-outline-secondary" asp-page="/task6">Back</a>
            </div>
        }
    </div>
</body>
</html>
